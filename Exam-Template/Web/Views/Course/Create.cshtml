@model GP.Domain.Entities.Course

@using GP.Domain.Entities

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateCourse" class="control-label"></label>
                <input asp-for="DateCourse" class="form-control" />
                <span asp-validation-for="DateCourse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LieuDepart" class="control-label"></label>
                <input asp-for="LieuDepart" class="form-control" />
                <span asp-validation-for="LieuDepart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LieuArrive" class="control-label"></label>
                <input asp-for="LieuArrive" class="form-control" />
                <span asp-validation-for="LieuArrive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Montant" class="control-label"></label>
                <input asp-for="Montant" class="form-control" />
                <span asp-validation-for="Montant" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PaiementEnLigne" /> @Html.DisplayNameFor(model => model.PaiementEnLigne)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Etat" class="control-label"></label>
                <select asp-items="@Html.GetEnumSelectList<Etat>()" asp-for="Etat" class="form-control" />
                </select>
                <span asp-validation-for="Etat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoitureId" class="control-label"></label>
                <select asp-for="VoitureId" class="form-control" asp-items="ViewBag.VoitureId">
                    <option>Select an Item</option>
                </select>
                <span asp-validation-for="VoitureId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId">
                    <option>Select an Item</option>
                </select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

